<Page x:Class="Game.Login_and_Registr"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Game"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login_and_Registr">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Click="Button_Click" Width="230" Height="60" VerticalAlignment="Bottom" HorizontalAlignment="Right" Background="{x:Null}" BorderBrush="{x:Null}">
                <Image Source="Images\Login.png"/>
            </Button>
            <Button Click="Button_Click_1" Width="230" Height="60" VerticalAlignment="Bottom" HorizontalAlignment="Right" Background="{x:Null}" BorderBrush="{x:Null}">
                <Image Source="Images\Registr.png"/>
            </Button>
        </StackPanel>
        <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Left" Orientation="Vertical" Margin="25">
            <Image x:Name="mus" Source="IMages\music.png" MouseDown="mus_MouseDown" Width="150"/>
            <Image x:Name="zvu" Source="Images\zvuk.png" Grid.Row="1" MouseDown="zvu_MouseDown" Width="150"/>
        </StackPanel>
    </Grid>
</Page>
